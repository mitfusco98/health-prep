modules = ["python-3.11", "postgresql-16", "python3"]

[nix]
channel = "stable-24_05"
packages = ["file", "glibcLocales", "libxcrypt", "openssl", "postgresql"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Fast Start"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "Fast Start"
author = 42133482
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python fast_startup.py && gunicorn --bind 0.0.0.0:5000 --reuse-port --preload --workers 1 --timeout 30 main:app"

[[ports]]
localPort = 5000
externalPort = 80
